<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appfabetBackground"
    tools:context=".LearnVariantsBrowser">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/schoolboard"
        android:fontFamily="@font/kgbrokenvesselssketch"
        android:gravity="center"
        android:text="@string/variantsBar"
        android:textColor="@color/white"
        android:textSize="27sp" />

    <GridView
        android:id="@+id/gridViewVariants"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fadeScrollbars="false"
        android:fastScrollEnabled="true"
        android:gravity="center"
        android:horizontalSpacing="15dp"
        android:listSelector="#2A3C7000"
        android:numColumns="1"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:verticalSpacing="15dp">

    </GridView>


</RelativeLayout>