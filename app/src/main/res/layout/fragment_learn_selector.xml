<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".LearnSelector">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/kgbrokenvesselssketch"
        android:gravity="center"
        android:text="@string/learnBar"
        android:textColor="@color/white"
        android:textSize="27sp" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fadeScrollbars="false"
        android:fastScrollEnabled="true"
        android:gravity="center"
        android:horizontalSpacing="15dp"
        android:listSelector="#2A3C7000"
        android:numColumns="1"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:verticalSpacing="15dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="60dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/gif3"
        android:visibility="invisible">

    </pl.droidsonroids.gif.GifImageView>

    <ImageView
        android:id="@+id/pencilImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="40dp"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/pencil_cloud_text" />

    <ImageButton
        android:id="@+id/buttonHide"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_below="@+id/gifImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="2dp"
        android:background="@color/appfabetOrange"
        android:scaleType="fitCenter"
        android:src="@drawable/fast_forward_white"
        android:text="Ok!"
        android:visibility="invisible" />

</RelativeLayout>